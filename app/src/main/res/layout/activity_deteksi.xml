<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".deteksi.DeteksiActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jawablah pertanyaan berikut sesuai dengan gejala kerusakan AC yang dialami!"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="60dp"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertanyaan"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imgAsk"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon"
            android:layout_gravity="center"
            android:paddingTop="24dp"/>

        <View
            android:background="@color/white"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnYa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya"
                android:clickable="true"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/holo_green_dark"/>

            <Button
                android:id="@+id/btnTidak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak"
                android:clickable="true"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:backgroundTint="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvKembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvSelanjutnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selanjutnya"
                android:textSize="12sp"
                android:clickable="true"
                android:layout_marginLeft="96dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="206dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="Acfix"/>
    </LinearLayout>



</LinearLayout>