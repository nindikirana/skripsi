<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".panduan.PanduanActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panduan Penggunaan Aplikasi Acfix"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textColor="#70376c"
                android:textSize="24sp"/>

            <View
                android:background="#b893b5"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deteksi Kerusakan AC"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#855281"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Memilih menu Deteksi."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Memilih checkbox sesuai dengan gejala kerusakan AC yang dialami."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Jika sudah selesai, mengeklik tombol Submit untuk mengetahui hasil deteksi kerusakan yang dilakukan. Mengeklik tombol Clar untuk menghilangkan Checkbox yang telah dipilih"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Menampilkan informasi hasil Kerusakan dan solusi untuk penanganannya."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Gejala"
                android:layout_marginTop="24dp"
                android:textColor="#855281"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Memilih menu Gejala."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Memilih salah satu gejala, untuk melihat detail gejala. Serta dapat melakukan pencarian gejala dengan mengetikkan kata kunci gejala yang ingin dicari."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Menampilkan detail gejala berupa beberapa kemungkinan kerusakan yang terjadi beserta solusi penanganannya."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Kerusakan"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#855281"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Memilih menu Kerusakan."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Memilih salah satu kerusakan, untuk melihat detail kerusakan. Serta dapat melakukan pencarian gejala dengan mengetikkan kata kunci kerusakan yang ingin dicari"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Menampilkan detail kerusakan berupa beberapa gejala yang terjadi beserta solusi penanganannya."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Hasil Deteksi Kerusakan"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#855281"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Memilih menu Hasil Deteksi."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Memilih salah satu hasil deteksi."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Menampilkan detail hasil deteksi kerusakan AC yang pernah dilakukan."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pakar"
                android:textColor="#855281"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Memilih menu Pakar."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Dapat melihat informasi mengenai pakar untuk pengembangan aplikasi sistem pakar deteksi kerusakan AC."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#855281"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Memilih menu Tentang."
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Dapat melihat mengenai informasi aplikasi, versi aplikasi saat ini, dan pengembang aplikasi sistem pakar deteksi kerusakan AC."
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Â© 2022 Acfix"
                    android:paddingTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"/>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</LinearLayout>