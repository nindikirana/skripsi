<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAdminUserIdUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id User"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvAdminUserUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_below="@+id/tvAdminUserIdUser"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvAdminUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_below="@+id/tvAdminUserUsername"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvAdminUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_below="@+id/tvAdminUserEmail"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvAdminUserIdLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id Level"
            android:layout_below="@+id/tvAdminUserPassword"
            android:textSize="12sp"/>
    </RelativeLayout>
    <View
        android:background="#855281"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>